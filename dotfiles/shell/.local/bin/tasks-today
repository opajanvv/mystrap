#!/home/jan/.local/share/uv/tools/gcalcli/bin/python
"""Fetch today's tasks from Google Tasks."""

import datetime
from pathlib import Path

from google.auth.transport.requests import Request
from google.oauth2.credentials import Credentials
from google_auth_oauthlib.flow import InstalledAppFlow
from googleapiclient.discovery import build

CONFIG_DIR = Path.home() / ".config" / "calendar-cli"
CREDENTIALS_FILE = CONFIG_DIR / "credentials.json"
TOKEN_FILE = CONFIG_DIR / "token-tasks.json"
SCOPES = ["https://www.googleapis.com/auth/tasks.readonly"]


def get_credentials():
    creds = None
    if TOKEN_FILE.exists():
        creds = Credentials.from_authorized_user_file(str(TOKEN_FILE), SCOPES)

    if not creds or not creds.valid:
        if creds and creds.expired and creds.refresh_token:
            creds.refresh(Request())
        else:
            flow = InstalledAppFlow.from_client_secrets_file(str(CREDENTIALS_FILE), SCOPES)
            creds = flow.run_local_server(port=0)
        TOKEN_FILE.write_text(creds.to_json())

    return creds


def get_todays_tasks():
    creds = get_credentials()
    service = build("tasks", "v1", credentials=creds)

    today_str = datetime.date.today().isoformat()

    # Get all task lists
    tasklists = service.tasklists().list().execute().get("items", [])

    tasks_found = []
    for tasklist in tasklists:
        tasks_result = service.tasks().list(
            tasklist=tasklist["id"],
            showCompleted=False,
        ).execute()

        for task in tasks_result.get("items", []):
            due = task.get("due", "")
            if due.startswith(today_str):
                tasks_found.append(task["title"])

    if not tasks_found:
        print("No tasks due today.")
        return

    for title in tasks_found:
        print(f"- {title}")


if __name__ == "__main__":
    get_todays_tasks()
